function FMA (x : num) (y : num) (z : num)
  : M[1.11e-16]num
  { a = mul(x,y);
    b = add(|a,z|);
    rnd b
}

function Horner2
  (a0 : M[1.11e-16]num) (a1 : M[1.11e-16]num)
  (a2 : M[1.11e-16]num) (x : ![2.0]M[1.11e-16]num)
  : (M[6.0e-16]num)
  { let [x1] = x ;
    let a1m  = a1;
    let a2m  = a2;
    z = (((FMA a2m) x1) a1m);
    let y1  = z;
    let a0m = a0;
    (((FMA y1) x1) a0m)
}

